<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/todos_nav_graph">

    <include app:graph="@navigation/todos_nav_graph" />
    <include app:graph="@navigation/goals_nav_graph" />
    <include app:graph="@navigation/results_nav_graph" />
    <include app:graph="@navigation/settings_nav_graph" />

    <action android:id="@+id/navigation_todos" app:destination="@id/todos_nav_graph" />
    <action android:id="@+id/navigation_goals" app:destination="@id/goals_nav_graph" />
    <action android:id="@+id/navigation_results" app:destination="@id/results_nav_graph" />
    <action android:id="@+id/navigation_settings" app:destination="@id/settings_nav_graph" />

</navigation>